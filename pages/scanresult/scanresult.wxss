.top{
  width: 100%;
  height: 40vh;
  background: #00bcd4;
  border-radius: 0 0 300rpx 300rpx;
}
.card{
  border-radius: 10rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: -20vh;
  background: #fff;
  box-shadow: 5rpx 5rpx 8rpx #ccc;
  padding: 50rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.card .openbg{
  width: 100%;
  height: 400rpx;
}
.card .num{
  color: #767778;
  text-align: center;
}
.card .code{
  text-align: center;
  font-size: 1.5rem;
  color: #00bcd4;
  margin-top: 30rpx;
  font-weight: bold;
}
.open_btn{
  width: 90%;
  background: #00bcd4;
  color: #fff;
  border-radius: 10rpx;
  border: none;
  margin-top: 80rpx;
  padding: 10rpx;
}
.admin_btn{
  width: 90%;
  margin: 0 auto;
  margin-top: 80rpx;
  padding: 50rpx;
  background: transparent;
  color: transparent;
  box-sizing: border-box;
}