.top{
  width: 100%;
  height: 200rpx;
  background: #00bcd4;
  position: relative;
}
.top .top_user{
  background: #fff;
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 130rpx;
  left: 0;
  right: 0;
  box-shadow: 5rpx 5rpx 8rpx #ccc;
}
.top .top_user .user_img{
  width:200rpx;
  height:200rpx;
  margin:0 auto;
  position:absolute;
  left:0;
  right:0;
  top:-105rpx;
  padding: 5rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 50%;
}
.top .top_user .user_img image{
  width: 100%;
  height: 100%;
}
.top .top_user .user_phone{
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  color: #767778;
}
.center{
  width: 100%;
  /* margin-top: 130rpx; 25rpx */
  margin-top: 155rpx;
}
.center .lists{
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 8rpx #ccc;
  width: 95%;
  margin: 0 auto;
}
.center .lists .list{
  padding: 30rpx 25rpx;
  display: flex;
  align-items: center;
}
.center .lists .list:first-child{
  border-bottom: 1px solid #ccc;
}
.center .lists .list .img{
  width: 45rpx;
  height: 45rpx;
}
.center .lists .list .list_opt{
  flex: 1;
  padding: 0 15rpx;
  font-size: 35rpx;
  display: flex;
  justify-content: space-between;
}
.center .lists .list .right_img{
  width: 25rpx;
  height: 40rpx;
}